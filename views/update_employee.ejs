<!-- include header -->
<%- include('include/_header') %>
<!-- /include header -->

<!-- Main Site -->
<main id="site-main">
  <div class="container">
    <div class="box-nav d-flex justify-between">
      <div class="filter">
        <a href="/"><i class="fas fa-angle-double-left"></i> All Employees</a>
      </div>
    </div>
    <div class="form-title text-center">
      <h2 class="text-dark">Update Employee</h2>
      <span class="text-light">Use the below form to Update an account</span>
    </div>

    <!-- add employee form -->
    <!-- form handling -->
    <form method="POST" id="update_employee">
      <div class="new_employee">
        <div class="form-group">
          <label for="first_name" class="text-light">First Name</label>
          <input type="hidden" name="id" value="<%= employee._id %>" />
          <input
            type="text"
            name="first_name"
            value="<%= employee.first_name %>"
          />
        </div>
        <div class="form-group">
          <label for="last_name" class="text-light">Last Name</label>
          <input
            type="text"
            name="last_name"
            value="<%= employee.last_name %>"
          />
        </div>
        <div class="form-group">
          <label for="Email" class="text-light">Email</label>
          <input
            type="text"
            name="email"
            value="<%= employee.email%>"
          />
        </div>
        <div class="form-group">
          <label for="Mobile" class="text-light">Mobile</label>
          <input
            type="text"
            name="mobile"
            value="<%= employee.mobile%>"
          />
        </div>
        <!-- <div class="form-group">
            <label for="gender" class="text-light">Gender</label>
            <div class="radio inline">
                <input type="radio" id="radio-2" name="gender" value="Male" <%= employee.gender == 'Male' ? 'checked' : '' %>>
                <label for="radio-2" class="radio-label">Male</label>
            </div>
            <div class="radio inline">
                <input type="radio" id="radio-3" name="gender" value="Female"  <%= employee.gender == 'Female' ? 'checked' : '' %> >
                <label for="radio-3" class="radio-label">Female</label>
            </div>
        </div> -->
        <div class="form-group">
          <label for="designation" class="text-light">Designation</label>
          <input
            type="text"
            name="designation"
            value="<%= employee.designation%>"
          />
        </div>
        <!-- <div class="form-group">
            <label for="dataOfJoining" class="text-light">Date of Joining</label>
            <input type="date" name="dataOfJoining" value="<%= employee.dataOfJoining%>" placeholder="">
        </div> -->
        <div class="form-group">
          <label for="manager" class="text-light"
            >Reporting Manager</label
          >
          <input
            type="text"
            name="manager"
            value="<%= employee.manager%>"
          />
        </div>
        <div class="form-group">
          <label for="salary" class="text-light">Salary</label>
          <input type="number" name="salary" value="<%= employee.salary%>" placeholder="">
        </div>
        <div class="form-group">
          <label for="employeecode" class="text-light">Employee Code</label>
          <input type="number" name="employeecode" value="<%= employee.employeecode%>" placeholder="">
        </div>
        <div class="form-group">
          <label for="location" class="text-light">Location</label>
          <input type="text" name="location" value="<%= employee.location%>" placeholder="">
        </div>
        <div class="form-group">
          <label for="state" class="text-light">State</label>
          <input type="text" name="state" value="<%= employee.state%>" placeholder="">
        </div>
        <div class="form-group">
          <label for="country" class="text-light">Country</label>
          <input type="text" name="country" value="<%= employee.country%>" placeholder="India">
        </div>
        <div class="form-group">
          <label for="department" class="text-light">Department</label>
          <input type="text" name="department" value="<%= employee.department%>" placeholder="IT" />
        </div>
        <div class="form-group">
          <label for="deletedAt" class="text-light">Status</label>
          <div class="radio inline">
            <input type="radio" id="radio-4" name="deletedAt" value="Deactivate"
            <%= employee.deletedAt == 'Deactivate' ? 'checked' : '' %> >
            <label for="radio-4" class="radio-label">Deactivate</label>
          </div>
          <div class="radio inline">
            <input type="radio" id="radio-5" name="deletedAt" value="Activate"
            <%= employee.deletedAt == 'Activate' ? 'checked' : '' %> >
            <label for="radio-5" class="radio-label">Activate</label>
          </div>
        </div>

        <div class="form-group">
          <button type="submit" class="btn text-dark update">Save</button>
        </div>
      </div>
    </form>
  </div>
</main>
<!-- /Main Site -->

<!-- include footer -->
<%- include('include/_footer') %>
<!-- /include footer -->
